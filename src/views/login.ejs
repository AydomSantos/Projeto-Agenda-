<%- include('includes/head') %> <!-- Inclui o cabeçalho da página -->

<%- include('includes/nav') %> <!-- Inclui a barra de navegação -->

<div class="container"> <!-- Início do contêiner Bootstrap -->
  <div class="row"> <!-- Início da linha -->

    <!-- Coluna vazia para margem esquerda -->
    <div class="col-lg-2"></div>

    <!-- Coluna principal -->
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou Entrar</h1> <!-- Título centralizado -->
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p> <!-- Parágrafo centralizado -->

      <!-- Inclui mensagens de erro ou sucesso -->
      <%- include('includes/messages'); %>

      <div class="row"> <!-- Início de uma nova linha -->

        <!-- Coluna para o formulário de cadastro -->
        <div class="col-lg my-5">
          <div class="card"> <!-- Cartão Bootstrap -->
            <div class="card-body"> <!-- Corpo do cartão -->
              <h4 class="card-title">Faça seu cadastro</h4> <!-- Título do cartão -->
              <p class="card-text">Se você ainda não tem conta, preencha o formulário abaixo:</p> <!-- Texto do cartão -->

              <!-- Formulário de cadastro -->
              <form class="form-cadastro" action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>> <!-- Token CSRF -->
                <div class="form-group"> <!-- Grupo de formulário -->
                  <label for="email">Seu e-mail</label> <!-- Rótulo do campo -->
                  <input type="email" class="form-control" name="email" required> <!-- Campo de e-mail -->
                </div>
                <div class="form-group"> <!-- Grupo de formulário -->
                  <label for="password">Sua senha</label> <!-- Rótulo do campo -->
                  <input type="password" class="form-control" name="password" required> <!-- Campo de senha -->
                </div>
                <button type="submit" class="btn btn-primary btn-block">Criar minha conta</button> <!-- Botão para enviar o formulário -->
              </form> <!-- Fim do formulário de cadastro -->
            </div> <!-- Fim do corpo do cartão -->
          </div> <!-- Fim do cartão -->
        </div> <!-- Fim da coluna para o formulário de cadastro -->

        <!-- Coluna para o formulário de login -->
        <div class="col-lg my-5">
          <div class="card"> <!-- Cartão Bootstrap -->
            <div class="card-body"> <!-- Corpo do cartão -->
              <h4 class="card-title">Faça seu login</h4> <!-- Título do cartão -->
              <p class="card-text">Se você já tem uma conta, faça login abaixo:</p> <!-- Texto do cartão -->

              <!-- Formulário de login -->
              <form class="form-login" action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>> <!-- Token CSRF -->
                <div class="form-group"> <!-- Grupo de formulário -->
                  <label for="email">Seu e-mail</label> <!-- Rótulo do campo -->
                  <input type="email" class="form-control" name="email" required> <!-- Campo de e-mail -->
                </div>
                <div class="form-group"> <!-- Grupo de formulário -->
                  <label for="password">Sua senha</label> <!-- Rótulo do campo -->
                  <input type="password" class="form-control" name="password" required> <!-- Campo de senha -->
                </div>
                <button type="submit" class="btn btn-primary btn-block">Entrar</button> <!-- Botão para enviar o formulário -->
              </form> <!-- Fim do formulário de login -->
            </div> <!-- Fim do corpo do cartão -->
          </div> <!-- Fim do cartão -->
        </div> <!-- Fim da coluna para o formulário de login -->

      </div> <!-- Fim da linha -->

    </div> <!-- Fim da coluna principal -->

    <!-- Coluna vazia para margem direita -->
    <div class="col-lg-2"></div>

  </div> <!-- Fim da linha -->
</div> <!-- Fim do contêiner Bootstrap -->

<%- include('includes/footer') %> <!-- Inclui o rodapé da página -->
